<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>matchingservice</artifactId>
        <groupId>info.matchingservice</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>matchingservice-canonicalmappings</artifactId>
    <name>Matching App Canonicalmappings</name>

    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>matchingservice-canonical</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>matchingservice-dom</artifactId>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>isis</id>
            <activation>
                <property>
                    <name>!skip.isis</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.apache.isis.core</groupId>
                    <artifactId>isis-core-applib</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.apache.isis.core</groupId>
                    <artifactId>isis-core-viewer-restfulobjects-rendering</artifactId>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>mapping-library</id>
            <activation>
                <property>
                    <name>!skip.mapping-library</name>
                </property>
            </activation>

            <properties>
                <orika-core.version>1.4.5</orika-core.version>
            </properties>

            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>ma.glasnost.orika</groupId>
                        <artifactId>orika-core</artifactId>
                        <version>${orika-core.version}</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>

            <dependencies>
                <dependency>
                    <groupId>ma.glasnost.orika</groupId>
                    <artifactId>orika-core</artifactId>
                </dependency>
            </dependencies>
        </profile>
    </profiles>


</project>